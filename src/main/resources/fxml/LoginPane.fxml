<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import org.controlsfx.control.textfield.CustomPasswordField?>
<?import org.controlsfx.control.textfield.CustomTextField?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
            minWidth="-Infinity" xmlns="http://javafx.com/javafx/11.0.1"
            fx:controller="tiendaclub.control.LoginPaneControl">
    <center>
        <GridPane hgap="5.0" vgap="3.0" BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="NEVER" minWidth="10.0"/>
                <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="10.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Label text="Username"/>
                <CustomTextField fx:id="usernameTextField" minWidth="150.0" GridPane.columnIndex="1"
                                 GridPane.hgrow="ALWAYS"/>
                <CustomPasswordField fx:id="passwordTextField" minWidth="150.0" GridPane.columnIndex="1"
                                     GridPane.hgrow="ALWAYS" GridPane.rowIndex="1"/>
                <Label layoutX="10.0" layoutY="50.0" text="Password" GridPane.rowIndex="1"/>
            </children>
        </GridPane>
    </center>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <bottom>
        <BorderPane BorderPane.alignment="CENTER">
            <right>
                <Button fx:id="loginButton" defaultButton="true" mnemonicParsing="false" onAction="#loginOnAct"
                        text="Login" BorderPane.alignment="CENTER">
                    <BorderPane.margin>
                        <Insets top="10.0"/>
                    </BorderPane.margin>
                </Button>
            </right>
            <left>
                <Label fx:id="alertMsg" minHeight="30.0" minWidth="30.0" BorderPane.alignment="CENTER"/>
            </left>
        </BorderPane>
    </bottom>
</BorderPane>
