<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tiendaclub.control.editor.SedeEditorPaneControl">
    <center>
        <GridPane alignment="CENTER" vgap="5.0" BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints halignment="CENTER" hgrow="NEVER" maxWidth="100.0" minWidth="70.0" prefWidth="70.0"/>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="1.7976931348623157E308" minWidth="200.0"
                                   prefWidth="200.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints maxHeight="1.7976931348623157E308" minHeight="25.0" prefHeight="25.0"
                                valignment="CENTER" vgrow="NEVER"/>
                <RowConstraints maxHeight="1.7976931348623157E308" minHeight="25.0" prefHeight="25.0"
                                valignment="CENTER" vgrow="NEVER"/>
                <RowConstraints maxHeight="1.7976931348623157E308" minHeight="25.0" prefHeight="25.0"
                                valignment="CENTER" vgrow="NEVER"/>
                <RowConstraints maxHeight="1.7976931348623157E308" valignment="CENTER" vgrow="NEVER"/>
                <RowConstraints maxHeight="1.7976931348623157E308" minHeight="25.0" prefHeight="25.0"
                                valignment="CENTER" vgrow="NEVER"/>
            </rowConstraints>
            <children>
                <Label text="ID"/>
                <TextField fx:id="fxId" editable="false" layoutX="80.0" layoutY="70.0" GridPane.columnIndex="1"/>
                <Label text="activo" GridPane.rowIndex="4"/>
                <CheckBox fx:id="fxCheckActivo" mnemonicParsing="false" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
                <Label text="Nombre" GridPane.rowIndex="1"/>
                <Label text="Telefono" GridPane.rowIndex="2"/>
                <Label text="Direccion" GridPane.rowIndex="3"/>
                <TextField fx:id="fxNombre" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                <TextField fx:id="fxTelefono" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                <TextArea fx:id="fxDireccion" prefHeight="20.0" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS"
                          GridPane.rowIndex="3" GridPane.vgrow="ALWAYS"/>
            </children>
        </GridPane>
    </center>
    <top>
        <Label text="Sede" BorderPane.alignment="CENTER">
            <font>
                <Font size="25.0"/>
            </font>
            <padding>
                <Insets bottom="10.0"/>
            </padding>
        </Label>
    </top>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <bottom>
        <BorderPane BorderPane.alignment="CENTER">
            <right>
                <HBox alignment="CENTER_RIGHT" spacing="10.0" BorderPane.alignment="CENTER">
                    <children>
                        <Button mnemonicParsing="false" onAction="#fxDiscardAction" text="Descartar"/>
                        <Button mnemonicParsing="false" onAction="#fxSaveAction" text="Guardar"/>
                    </children>
                </HBox>
            </right>
            <padding>
                <Insets top="10.0"/>
            </padding>
        </BorderPane>
    </bottom>
</BorderPane>
