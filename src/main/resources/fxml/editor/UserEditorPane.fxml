<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/11"
  fx:controller="tiendaclub.control.editor.UsuarioEditorPaneControl">
  <bottom>
    <BorderPane BorderPane.alignment="CENTER">
      <left>
        <Button BorderPane.alignment="CENTER" mnemonicParsing="false" onAction="#fxBtnPasswordAction" text="Password"
          fx:id="fxButtonPassword"/>
      </left>
      <padding>
        <Insets top="10.0"/>
      </padding>
      <right>
        <HBox BorderPane.alignment="CENTER" alignment="CENTER_RIGHT" spacing="10.0">
          <children>
            <Button mnemonicParsing="false" onAction="#fxBtnDiscardAction" text="Descartar"/>
            <Button mnemonicParsing="false" onAction="#fxBtnSaveAction" text="Guardar"/>
          </children>
        </HBox>
      </right>
    </BorderPane>
  </bottom>
  <center>
    <GridPane BorderPane.alignment="CENTER" alignment="CENTER" vgap="5.0">
      <children>
        <CheckBox GridPane.columnIndex="1" GridPane.rowIndex="8" mnemonicParsing="false" fx:id="fxCheckActivo"/>
        <ComboBox GridPane.columnIndex="1" GridPane.rowIndex="7" minWidth="200.0" fx:id="fxCbxAcceso"/>
        <Label text="ID"/>
        <Label GridPane.rowIndex="1" text="username"/>
        <Label GridPane.rowIndex="2" text="nombre"/>
        <Label GridPane.rowIndex="3" text="telefono"/>
        <Label GridPane.rowIndex="4" text="email"/>
        <Label GridPane.rowIndex="5" text="direccion"/>
        <Label GridPane.rowIndex="6" text="descripcion"/>
        <Label GridPane.rowIndex="7" text="idAcceso"/>
        <Label GridPane.rowIndex="8" text="activo"/>
        <TextArea style="-fx-wrap-text: true;" GridPane.columnIndex="1" GridPane.rowIndex="5" minHeight="-Infinity"
          prefHeight="40.0" fx:id="fxDireccion">
          <GridPane.margin>
            <Insets/>
          </GridPane.margin>
        </TextArea>
        <TextArea style="-fx-wrap-text: true;" GridPane.columnIndex="1" GridPane.rowIndex="6" minHeight="-Infinity"
          prefHeight="70.0" fx:id="fxDescripcion"/>
        <TextField GridPane.columnIndex="1" GridPane.rowIndex="1" fx:id="fxUsername">
          <GridPane.margin>
            <Insets/>
          </GridPane.margin>
        </TextField>
        <TextField GridPane.columnIndex="1" GridPane.rowIndex="2" fx:id="fxNombre">
          <GridPane.margin>
            <Insets/>
          </GridPane.margin>
        </TextField>
        <TextField GridPane.columnIndex="1" GridPane.rowIndex="3" fx:id="fxTelefono">
          <GridPane.margin>
            <Insets/>
          </GridPane.margin>
        </TextField>
        <TextField GridPane.columnIndex="1" GridPane.rowIndex="4" fx:id="fxEmail">
          <GridPane.margin>
            <Insets/>
          </GridPane.margin>
        </TextField>
        <TextField GridPane.columnIndex="1" editable="false" layoutX="80.0" layoutY="70.0" fx:id="fxId"/>
      </children>
      <columnConstraints>
        <ColumnConstraints halignment="CENTER" hgrow="NEVER" maxWidth="100.0" minWidth="70.0" prefWidth="70.0"/>
        <ColumnConstraints hgrow="SOMETIMES" maxWidth="1.7976931348623157E308" minWidth="200.0"
          prefWidth="200.0"/>
      </columnConstraints>
      <rowConstraints>
        <RowConstraints minHeight="25.0" prefHeight="25.0" valignment="CENTER" vgrow="NEVER"/>
        <RowConstraints minHeight="25.0" prefHeight="25.0" valignment="CENTER" vgrow="NEVER"/>
        <RowConstraints minHeight="25.0" prefHeight="25.0" valignment="CENTER" vgrow="NEVER"/>
        <RowConstraints minHeight="25.0" prefHeight="25.0" valignment="CENTER" vgrow="NEVER"/>
        <RowConstraints minHeight="25.0" prefHeight="25.0" valignment="CENTER" vgrow="NEVER"/>
        <RowConstraints maxHeight="1.7976931348623157E308" minHeight="-Infinity" prefHeight="40.0"
          vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="1.7976931348623157E308" minHeight="-Infinity" prefHeight="70.0"
          vgrow="SOMETIMES"/>
        <RowConstraints minHeight="25.0" prefHeight="25.0" valignment="CENTER" vgrow="NEVER"/>
        <RowConstraints minHeight="25.0" prefHeight="30.0" valignment="CENTER" vgrow="NEVER"/>
      </rowConstraints>
    </GridPane>
  </center>
  <padding>
    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
  </padding>
  <top>
    <Label BorderPane.alignment="CENTER" text="Usuario">
      <font>
        <Font size="25.0"/>
      </font>
      <padding>
        <Insets bottom="10.0"/>
      </padding>
    </Label>
  </top>
</BorderPane>
