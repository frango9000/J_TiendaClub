<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tiendaclub.control.editor.UsuarioEditorPaneControl">
    <center>
        <GridPane alignment="CENTER" vgap="5.0" BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints halignment="CENTER" hgrow="NEVER" maxWidth="100.0" minWidth="70.0" prefWidth="70.0"/>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="1.7976931348623157E308" minWidth="200.0"
                                   prefWidth="200.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="25.0" prefHeight="25.0" valignment="CENTER" vgrow="NEVER"/>
                <RowConstraints minHeight="25.0" prefHeight="25.0" valignment="CENTER" vgrow="NEVER"/>
                <RowConstraints minHeight="25.0" prefHeight="25.0" valignment="CENTER" vgrow="NEVER"/>
                <RowConstraints minHeight="25.0" prefHeight="25.0" valignment="CENTER" vgrow="NEVER"/>
                <RowConstraints minHeight="25.0" prefHeight="25.0" valignment="CENTER" vgrow="NEVER"/>
                <RowConstraints maxHeight="1.7976931348623157E308" minHeight="-Infinity" prefHeight="40.0"
                                vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="1.7976931348623157E308" minHeight="-Infinity" prefHeight="70.0"
                                vgrow="SOMETIMES"/>
                <RowConstraints minHeight="25.0" prefHeight="25.0" valignment="CENTER" vgrow="NEVER"/>
                <RowConstraints minHeight="25.0" prefHeight="30.0" valignment="CENTER" vgrow="NEVER"/>
            </rowConstraints>
            <children>
                <Label text="ID"/>
                <Label text="username" GridPane.rowIndex="1"/>
                <Label text="nombre" GridPane.rowIndex="2"/>
                <Label text="telefono" GridPane.rowIndex="3"/>
                <Label text="email" GridPane.rowIndex="4"/>
                <Label text="direccion" GridPane.rowIndex="5"/>
                <Label text="descripcion" GridPane.rowIndex="6"/>
                <Label text="idAcceso" GridPane.rowIndex="7"/>
                <TextField fx:id="txUsername" GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <GridPane.margin>
                        <Insets/>
                    </GridPane.margin>
                </TextField>
                <TextField fx:id="txNombre" GridPane.columnIndex="1" GridPane.rowIndex="2">
                    <GridPane.margin>
                        <Insets/>
                    </GridPane.margin>
                </TextField>
                <TextField fx:id="txTelefono" GridPane.columnIndex="1" GridPane.rowIndex="3">
                    <GridPane.margin>
                        <Insets/>
                    </GridPane.margin>
                </TextField>
                <TextField fx:id="txEmail" GridPane.columnIndex="1" GridPane.rowIndex="4">
                    <GridPane.margin>
                        <Insets/>
                    </GridPane.margin>
                </TextField>
                <ComboBox fx:id="cbAcceso" minWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="7"/>
                <TextArea fx:id="txDireccion" minHeight="-Infinity" prefHeight="40.0" style="-fx-wrap-text: true;"
                          GridPane.columnIndex="1" GridPane.rowIndex="5">
                    <GridPane.margin>
                        <Insets/>
                    </GridPane.margin>
                </TextArea>
                <TextArea fx:id="txDescripcion" minHeight="-Infinity" prefHeight="70.0" style="-fx-wrap-text: true;"
                          GridPane.columnIndex="1" GridPane.rowIndex="6"/>
                <TextField fx:id="txId" editable="false" layoutX="80.0" layoutY="70.0" GridPane.columnIndex="1"/>
                <Label text="activo" GridPane.rowIndex="8"/>
                <CheckBox fx:id="fxCheckActivo" mnemonicParsing="false" GridPane.columnIndex="1" GridPane.rowIndex="8"/>
            </children>
        </GridPane>
    </center>
    <top>
        <Label text="Usuario" BorderPane.alignment="CENTER">
            <font>
                <Font size="25.0"/>
            </font>
            <padding>
                <Insets bottom="10.0"/>
            </padding>
        </Label>
    </top>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <bottom>
        <BorderPane BorderPane.alignment="CENTER">
            <right>
                <HBox alignment="CENTER_RIGHT" spacing="10.0" BorderPane.alignment="CENTER">
                    <children>
                        <Button mnemonicParsing="false" onAction="#discardAct" text="Descartar"/>
                        <Button mnemonicParsing="false" onAction="#SaveOnAct" text="Guardar"/>
                    </children>
                </HBox>
            </right>
            <left>
                <Button fx:id="txButtonPassword" mnemonicParsing="false" onAction="#passwordOnAct" text="Password"
                        BorderPane.alignment="CENTER"/>
            </left>
            <padding>
                <Insets top="10.0"/>
            </padding>
        </BorderPane>
    </bottom>
</BorderPane>
