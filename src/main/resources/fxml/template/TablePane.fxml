<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/11.0.1" fx:id="fxTablePane">
  <center>
    <TableView BorderPane.alignment="CENTER" fx:id="fxTable">
      <columnResizePolicy>
        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
      </columnResizePolicy>
      <columns>
        <TableColumn editable="false" maxWidth="75.0" minWidth="50.0" prefWidth="75.0" text="Id"
          fx:id="fxColumnId"/>
      </columns>
    </TableView>
  </center>
  <padding>
    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
  </padding>
  <right>
    <BorderPane>
      <bottom>
        <Button BorderPane.alignment="CENTER" mnemonicParsing="false" onAction="#fxButtonBackAct" prefWidth="80.0"
          text="Volver"/>
      </bottom>
      <padding>
        <Insets left="10.0"/>
      </padding>
      <top>
        <VBox spacing="10.0">
          <BorderPane.margin>
            <Insets/>
          </BorderPane.margin>
          <children>
            <Button mnemonicParsing="false" onAction="#fxButtonAddAct" prefWidth="80.0" text="Agregar"/>
            <Button mnemonicParsing="false" onAction="#fxButtonEditAct" prefWidth="80.0" text="Editar"/>
            <Button mnemonicParsing="false" onAction="#fxButtonDeleteAct" prefWidth="80.0"
              text="Deactivar"/>
            <Button mnemonicParsing="false" onAction="#fxButtonRefreshAct" prefWidth="80.0"
              text="Refrescar"/>
            <CheckBox mnemonicParsing="false" onAction="#fxCheckHiddenAction" text="Todo"/>
          </children>
        </VBox>
      </top>
    </BorderPane>
  </right>
</BorderPane>
