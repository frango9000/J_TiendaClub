<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:id="fxTablePane" xmlns="http://javafx.com/javafx/11.0.1">
    <center>
        <TableView fx:id="fxTable" BorderPane.alignment="CENTER">
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
            <columns>
                <TableColumn fx:id="fxColumnId" editable="false" maxWidth="75.0" minWidth="50.0" prefWidth="75.0"
                             text="Id"/>
            </columns>
        </TableView>
    </center>
    <right>
        <BorderPane>
            <bottom>
                <Button mnemonicParsing="false" onAction="#fxButtonBackAct" prefWidth="80.0" text="Volver"
                        BorderPane.alignment="CENTER"/>
            </bottom>
            <top>
                <VBox spacing="10.0">
                    <children>
                        <Button mnemonicParsing="false" onAction="#fxButtonAddAct" prefWidth="80.0" text="Agregar"/>
                        <Button mnemonicParsing="false" onAction="#fxButtonEditAct" prefWidth="80.0" text="Editar"/>
                        <Button mnemonicParsing="false" onAction="#fxButtonDeleteAct" prefWidth="80.0"
                                text="Deactivar"/>
                        <Button mnemonicParsing="false" onAction="#fxButtonRefreshAct" prefWidth="80.0"
                                text="Refrescar"/>
                        <CheckBox mnemonicParsing="false" onAction="#fxCheckHiddenAction" text="Todo"/>
                    </children>
                    <BorderPane.margin>
                        <Insets/>
                    </BorderPane.margin>
                </VBox>
            </top>
            <padding>
                <Insets left="10.0"/>
            </padding>
        </BorderPane>
    </right>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
</BorderPane>
