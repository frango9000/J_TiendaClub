<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane fx:id="usersPane" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tiendaclub.control.UsuariosPaneControl">
    <center>
        <TableView fx:id="usuariosTable" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="tableColumnID" editable="false" maxWidth="100.0" minWidth="25.0" prefWidth="100.0"
                             text="Id"/>
                <TableColumn fx:id="tableColumnUser" editable="false" maxWidth="800.0" prefWidth="-1.0" text="User"/>
                <TableColumn fx:id="tableColumnName" editable="false" maxWidth="800.0" prefWidth="-1.0" text="Nombre"/>
                <TableColumn fx:id="tableColumnLevel" editable="false" maxWidth="800.0" prefWidth="-1.0" text="Acceso"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
    </center>
    <right>
        <BorderPane BorderPane.alignment="CENTER">
            <bottom>
                <Button mnemonicParsing="false" onAction="#usersBackAct" prefWidth="80.0" text="Volver"
                        BorderPane.alignment="CENTER"/>
            </bottom>
            <top>
                <VBox alignment="TOP_CENTER" spacing="10.0" BorderPane.alignment="CENTER">
                    <children>
                        <Button mnemonicParsing="false" prefWidth="80.0" text="Agregar"/>
                        <Button mnemonicParsing="false" prefWidth="80.0" text="Editar"/>
                        <Button mnemonicParsing="false" prefWidth="80.0" text="Eliminar"/>
                        <Button mnemonicParsing="false" prefWidth="80.0" text="Refrescar"/>
                    </children>
                    <BorderPane.margin>
                        <Insets/>
                    </BorderPane.margin>
                </VBox>
            </top>
            <padding>
                <Insets left="10.0"/>
            </padding>
        </BorderPane>
    </right>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
</BorderPane>
