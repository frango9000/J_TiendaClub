<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tiendaclub.control.table.SedesPaneControl">
    <center>
        <TableView fx:id="fxTable" BorderPane.alignment="CENTER">
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
            <columns>
                <TableColumn fx:id="fxColumnId" editable="false" maxWidth="75.0" minWidth="50.0" prefWidth="75.0"
                             text="Id"/>
                <TableColumn fx:id="fxColumnSede" prefWidth="75.0" text="Sede"/>
                <TableColumn fx:id="fxColumnTelefono" prefWidth="75.0" text="Telefono"/>
                <TableColumn fx:id="fxColumnDireccion" prefWidth="75.0" text="Direccion"/>
            </columns>
        </TableView>
    </center>
    <right>
        <BorderPane>
            <bottom>
                <Button mnemonicParsing="false" onAction="#fxButtonBackAction" prefWidth="80.0" text="Volver"
                        BorderPane.alignment="CENTER"/>
            </bottom>
            <top>
                <VBox spacing="10.0">
                    <children>
                        <Button mnemonicParsing="false" onAction="#fxButtonAddAction" prefWidth="80.0" text="Agregar"/>
                        <Button mnemonicParsing="false" onAction="#fxButtonEditAction" prefWidth="80.0" text="Editar"/>
                        <Button mnemonicParsing="false" onAction="#fxButtonDisableAction" prefWidth="80.0"
                                text="Deactivar"/>
                        <Button mnemonicParsing="false" onAction="#fxButtonRefreshAction" prefWidth="80.0"
                                text="Refrescar"/>
                        <CheckBox mnemonicParsing="false" onAction="#fxCheckHiddenAction" text="Todo"/>
                    </children>
                    <BorderPane.margin>
                        <Insets/>
                    </BorderPane.margin>
                </VBox>
            </top>
            <padding>
                <Insets left="10.0"/>
            </padding>
        </BorderPane>
    </right>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
</BorderPane>
