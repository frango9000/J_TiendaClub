<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/11.0.1"
            fx:controller="tiendaclub.control.table.UsuariosPaneControl">
    <center>
        <TableView fx:id="fxTable" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="fxColumnIsActive" maxWidth="50.0" minWidth="20.0" prefWidth="50.0"/>
                <TableColumn fx:id="fxColumnId" editable="false" maxWidth="100.0" minWidth="25.0" prefWidth="100.0"
                             text="Id"/>
                <TableColumn fx:id="fxColumnUser" editable="false" maxWidth="800.0" prefWidth="-1.0" text="User"/>
                <TableColumn fx:id="fxColumnName" editable="false" maxWidth="800.0" prefWidth="-1.0" text="Nombre"/>
                <TableColumn fx:id="fxColumnLevel" editable="false" maxWidth="800.0" prefWidth="-1.0" text="Acceso"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
    </center>
    <right>
        <BorderPane BorderPane.alignment="CENTER">
            <bottom>
                <VBox spacing="10.0" BorderPane.alignment="CENTER">
                    <children>
                        <Button mnemonicParsing="false" onAction="#fxBtnEliminarAction" prefWidth="80.0"
                                text="Eliminar"/>
                        <Button mnemonicParsing="false" onAction="#fxBtnRefreshAction" prefWidth="80.0"
                                text="Refrescar"/>
                        <Button layoutX="10.0" layoutY="45.0" mnemonicParsing="false" onAction="#fxBtnReloadAction"
                                prefWidth="80.0" text="Reload"/>
                        <Button layoutX="10.0" layoutY="80.0" mnemonicParsing="false" onAction="#fxBtnPullAction"
                                prefWidth="80.0" text="Pull"/>
                        <Button layoutX="10.0" layoutY="115.0" mnemonicParsing="false" onAction="#fxButtonBackAction"
                                prefWidth="80.0" text="Volver"/>
                    </children>
                </VBox>
            </bottom>
            <top>
                <VBox alignment="TOP_CENTER" spacing="10.0" BorderPane.alignment="CENTER">
                    <children>
                        <Button mnemonicParsing="false" onAction="#fxBtnAddAction" prefWidth="80.0" text="Agregar"/>
                        <Button mnemonicParsing="false" onAction="#fxBtnEditAction" prefWidth="80.0" text="Editar"/>
                        <Button layoutX="10.0" layoutY="80.0" mnemonicParsing="false" onAction="#fxBtnDisableAction"
                                prefWidth="80.0" text="Des/Activar"/>
                        <Button fx:id="fxBtnShowHide" mnemonicParsing="false" onAction="#fxBtnShowHideAction"
                                prefWidth="80.0" text="Todos"/>
                    </children>
                    <BorderPane.margin>
                        <Insets/>
                    </BorderPane.margin>
                </VBox>
            </top>
            <padding>
                <Insets left="10.0"/>
            </padding>
        </BorderPane>
    </right>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
</BorderPane>
