<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<fx:root xmlns:fx="http://javafx.com/fxml/1" type="BorderPane" xmlns="http://javafx.com/javafx/11.0.1">
  <center>
    <TableView BorderPane.alignment="CENTER" fx:id="fxTable">
      <columnResizePolicy>
        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
      </columnResizePolicy>
      <columns>
        <TableColumn maxWidth="50.0" minWidth="20.0" prefWidth="50.0" fx:id="fxColumnIsActive"/>
        <TableColumn editable="false" maxWidth="100.0" minWidth="25.0" prefWidth="100.0" text="Id" fx:id="fxColumnId"/>
      </columns>
    </TableView>
  </center>
  <padding>
    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
  </padding>
  <right>
    <BorderPane BorderPane.alignment="CENTER">
      <bottom>
        <VBox BorderPane.alignment="CENTER" spacing="10.0">
          <children>
            <Button layoutX="10.0" layoutY="115.0" mnemonicParsing="false" onAction="#fxButtonBackAction"
              prefWidth="80.0" text="Volver"/>
            <MenuButton mnemonicParsing="false" prefWidth="80.0" text="Mas" textAlignment="CENTER">
              <items>
                <MenuItem mnemonicParsing="false" onAction="#fxBtnEliminarAction" text="Eliminar"/>
                <MenuItem mnemonicParsing="false" onAction="#fxBtnLimpiarAction" text="Limpiar"/>
                <MenuItem mnemonicParsing="false" onAction="#fxBtnRefreshAction" text="Refrescar"/>
                <MenuItem mnemonicParsing="false" onAction="#fxBtnReloadAction" text="Reload"/>
                <MenuItem mnemonicParsing="false" onAction="#fxBtnPullAction" text="Pull"/>
                <MenuItem mnemonicParsing="false" text="Action 2"/>
              </items>
            </MenuButton>
          </children>
        </VBox>
      </bottom>
      <padding>
        <Insets left="10.0"/>
      </padding>
      <top>
        <VBox BorderPane.alignment="CENTER" alignment="TOP_CENTER" spacing="10.0">
          <BorderPane.margin>
            <Insets/>
          </BorderPane.margin>
          <children>
            <Button mnemonicParsing="false" onAction="#fxBtnAddAction" prefWidth="80.0" text="Agregar"/>
            <Button mnemonicParsing="false" onAction="#fxBtnEditAction" prefWidth="80.0" text="Editar"/>
            <Button layoutX="10.0" layoutY="80.0" mnemonicParsing="false" onAction="#fxBtnDisableAction"
              prefWidth="80.0" text="Des/Activar" fx:id="fxBtnDisable"/>
            <Button mnemonicParsing="false" onAction="#fxBtnShowHideAction" prefWidth="80.0" text="Todos"
              fx:id="fxBtnShowHide"/>
          </children>
        </VBox>
      </top>
    </BorderPane>
  </right>
</fx:root>
